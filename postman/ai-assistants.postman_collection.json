{
  "info": {
    "name": "AI Assistants",
    "description": "Routes for managing profile-scoped assistants.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080"
    },
    {
      "key": "email",
      "value": "user@example.com"
    },
    {
      "key": "password",
      "value": "password"
    },
    {
      "key": "assistantId",
      "value": "1"
    }
  ],
  "auth": {
    "type": "basic",
    "basic": [
      {
        "key": "username",
        "value": "{{email}}"
      },
      {
        "key": "password",
        "value": "{{password}}"
      }
    ]
  },
  "item": [
    {
      "name": "List assistants",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/ai/assistants",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "ai",
            "assistants"
          ]
        }
      }
    },
    {
      "name": "Create assistant",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Support Assistant\",\n  \"model\": \"gpt-4.1-mini\",\n  \"instructions\": \"Be concise and helpful.\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/ai/assistants",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "ai",
            "assistants"
          ]
        }
      }
    },
    {
      "name": "Update assistant",
      "request": {
        "method": "PATCH",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Support Assistant v2\",\n  \"model\": \"gpt-4.1-mini\",\n  \"instructions\": \"Be concise and friendly.\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/ai/assistants/{{assistantId}}",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "ai",
            "assistants",
            "{{assistantId}}"
          ]
        }
      }
    },
    {
      "name": "Delete assistant",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/ai/assistants/{{assistantId}}",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "ai",
            "assistants",
            "{{assistantId}}"
          ]
        }
      }
    }
  ]
}
